stage('Dependencies containers creation') {
    parallel 'debian 11 dependencies': {
        node {
            dir('centreon-plugins-debian11') {
                checkout scm
                dir ('ci/docker') {
                    sh 'docker build --no-cache . -f Dockerfile.plugins-debian11-dependencies -t registry.centreon.com/centreon-plugins-debian11-dependencies:22.04'
                    /*sh 'docker push registry.centreon.com/centreon-plugins-debian10-dependencies:22.04'*/
                }
            }
        }
    }
}
